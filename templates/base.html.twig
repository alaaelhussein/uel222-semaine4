<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        {# AS: base layout so every page gets the same core ui #}
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        >
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
        {# legacy icons still used in a few views #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
        <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    {% endblock %}

    </head>
    <body>
    {# reuse of s3 layour #}
    {% set menu_left = [
        {'label': 'Articles', 'route': 'article_index'},
        {'label': 'Catégories', 'route': 'category_index'}
    ] %}

    {% set menu_right = [
        {'label': 'Créer un article', 'route': 'article_new'},
        {'label': 'Créer une catégorie', 'route': 'category_new'}
    ] %}

    <nav class="navbar navbar-expand-lg navbar-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('article_index') }}">Accueil</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% for item in menu_left %}
                        {# as: set an active class so the current page is visible #}
                        {% set isActive = app.request.attributes.get('_route') == item.route %}
                        <li class="nav-item">
                            <a class="nav-link {{ isActive ? 'activ' : '' }}" href="{{ path(item.route) }}">
                                {{ item.label }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    {% for item in menu_right %}
                        {% set isActive = app.request.attributes.get('_route') == item.route %}
                        <li class="nav-item">
                            <a class="nav-link {{ isActive ? 'activ' : '' }}" href="{{ path(item.route) }}">
                                {{ item.label }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        {% block body %}{% endblock %}
    </div>
    {% block javascripts %}
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"
        ></script>
        {# as: small ui helper script (confirmations only) #}
        <script src="{{ asset('js/article.js') }}"></script>
    {% endblock %}

    </body>
</html>
