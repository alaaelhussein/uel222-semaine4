{% extends 'base.html.twig' %}

{% block title %}Article Admin{% endblock %}

{% block body %}
<div class="container container-main">
    <h1>Panneau d'administration des articles</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Category</th>
                <th>Content</th>
                <th>Publié</th>
                <th>Actions</th>
                <th>Publication</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><span class="badge bg-secondary">#{{ article.id }}</span></td>
                <td><strong>{{ article.title }}</strong></td>
                <td>
                    {% if article.Category.name is defined %}
                        {{ article.Category.name }}
                    {% endif %}
                </td>
                <td>{{ article.content[:50] }}...</td>

                <td>
                    {% if article.published %}
                        <span class="badge bg-success">Publié</span>
                    {% else %}
                        <span class="badge bg-secondary">Brouillon</span>
                    {% endif %}
                </td>

                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-sm btn-primary">Voir</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                </td>

                <td>
                    <form method="post"
                          action="{{ path('article_toggle', {id: article.id}) }}"
                          onsubmit="return confirm('Changer l\'état de cet article ?');">
                        <button class="btn btn-sm btn-outline-warning">
                            {% if article.published %}Dépublier{% else %}Publier{% endif %}
                        </button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center py-4">Aucun article trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}" class="btn btn-success">Créer un nouvel article</a>
</div>
{% endblock %}
