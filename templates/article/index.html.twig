{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div class="container container-main">
    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
        <h1>Articles</h1>
        <a href="{{ path('article_new') }}" class="btn btn-success m-0">
            <i class="fas fa-plus me-1"></i> Nouveau
        </a>
    </div>

    <div class="search-container mb-5">
        <form method="get" action="{{ path('article_index') }}" class="row g-2 justify-content-center">
            <div class="col-md-8 d-flex">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="q" class="form-control border-start-0 ps-0" placeholder="Rechercher par titre, contenu ou catégorie..." value="{{ searchTerm|default('') }}">
                    <button class="btn btn-primary px-4" type="submit">Rechercher</button>
                    {% if searchTerm is defined and searchTerm is not empty %}
                        <a href="{{ path('article_index') }}" class="btn btn-outline-secondary d-flex align-items-center">
                            <i class="fas fa-times"></i>
                        </a>
                    {% endif %}
                </div>
            </div>
        </form>
    </div>

    <div class="row g-4 mb-5">
        {% for article in articles %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 article-card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="text-muted">#{{ loop.index + ((currentPage|default(1) - 1) * 6) }}</span>
                        {% if article.category %}
                            <span class="text-muted small">{{ article.category.name }}</span>
                        {% endif %}
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark mb-2">{{ article.title }}</h5>
                        <p class="card-text text-muted flex-grow-1">
                            {{ article.content|length > 120 ? article.content|slice(0, 120) ~ '...' : article.content }}
                        </p>
                        <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                            <span class="text-muted small">
                                {{ article.published ? 'Publié' : 'Brouillon' }}
                            </span>
                            <span class="text-muted small">Vues: {{ article.views|default(0) }}</span>
                        </div>
                    </div>
                    <div class="card-footer bg-light border-0 p-3">
                        <div class="d-flex gap-2">
                            <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-sm btn-primary">Voir</a>
                            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-sm btn-warning text-white">Modifier</a>
                            <form method="post" action="{{ path('article_toggle', {id: article.id}) }}" class="d-inline">
                                <button class="btn btn-sm btn-outline-secondary" title="Changer l'état">
                                    {{ article.published ? 'Dépublier' : 'Publier' }}
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center py-5">
                <div class="bg-light rounded-4 p-5">
                    <i class="fas fa-ghost fa-3x text-muted mb-3"></i>
                    <p class="h5 text-muted">Aucun article trouvé</p>
                    <a href="{{ path('article_new') }}" class="btn btn-primary mt-3">Créer le premier article</a>
                </div>
            </div>
        {% endfor %}
    </div>

    {% if totalPages is defined and totalPages > 1 %}
        <nav aria-label="Navigation des articles" class="d-flex justify-content-center mt-5">
            <ul class="pagination shadow-sm">
                <li class="page-item {{ currentPage == 1 ? 'disabled' : '' }}">
                    <a class="page-link" href="{{ path('article_index', {'page': currentPage - 1, 'q': searchTerm|default('')}) }}">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
                {% for i in 1..totalPages %}
                    <li class="page-item {{ i == currentPage ? 'active' : '' }}">
                        <a class="page-link" href="{{ path('article_index', {'page': i, 'q': searchTerm|default('')}) }}">{{ i }}</a>
                    </li>
                {% endfor %}
                <li class="page-item {{ currentPage == totalPages ? 'disabled' : '' }}">
                    <a class="page-link" href="{{ path('article_index', {'page': currentPage + 1, 'q': searchTerm|default('')}) }}">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    {% endif %}
</div>
{% endblock %}
