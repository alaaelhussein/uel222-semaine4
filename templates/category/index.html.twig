{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="container container-main">
    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
        <h1>Catégories</h1>
        <a href="{{ path('category_new') }}" class="btn btn-primary">Nouvelle catégorie</a>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td class="text-muted">#{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-sm btn-primary">Voir</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center text-muted">Aucune catégorie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
